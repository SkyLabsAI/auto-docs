(subdir first_verification
  (rule
    (target main.rst)
    (mode (promote (until-clean)))
    (deps (:input main.v) main.vo)
    (action
      (progn
        (bash "python ${BHV_ROOT}/fmdeps/micro-docs/sphinx/alectryon/alectryon.py --frontend coq+rst --backend rst %{input} -o %{target}")
      )
    )
  )
)
